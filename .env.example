NODE_ENV=development
PORT=5000
DATABASE_URL=mongodb://localhost:27017/your-db-name
BCRYPT_SALT_ROUNDS=10
DEFAULT_PASSWORD=your_default_password

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

JWT_ACCESS_SECRET=your_access_secret
JWT_REFRESH_SECRET=your_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Social Media OAuth Configuration
# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_client_id
FACEBOOK_APP_SECRET=your_facebook_client_secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/v1/oauth/social/facebook/callback

# Instagram OAuth (uses Facebook)
INSTAGRAM_APP_ID=your_instagram_client_id
INSTAGRAM_APP_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/v1/oauth/social/instagram/callback

# Twitter OAuth
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:8000/api/v1/oauth/social/twitter/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/v1/oauth/social/linkedin/callback
